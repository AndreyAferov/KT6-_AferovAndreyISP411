<Page x:Class="PetShop.Pages.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PetShop.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoginPage"
      Background="White">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Label Content="Логин:"></Label>
            <TextBox x:Name="loginBox"></TextBox>
            <Label Content="Пароль:"></Label>
            <PasswordBox x:Name="PasswordBox"></PasswordBox>
            <Canvas x:Name="CaptchaCanvas" Width="120" Height="40" Margin="10" Visibility="Collapsed"/>
            <TextBox x:Name="CaptchaTextBox" Width="100" Height="30" Margin="10" Visibility="Collapsed"/>
            <Button x:Name="LoginButton" Click="LoginButton_Click" Margin="10"  Content="Войти" ></Button>
            <Button Content="Гость" Click="Button_Click" Margin="10"></Button>
        </StackPanel>
    </Grid>
</Page>
