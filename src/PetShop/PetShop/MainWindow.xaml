<Window x:Class="PetShop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PetShop"
        mc:Ignorable="d"
        Title="ИС - товары для животных" Height="650" Width="1000"
        MinHeight="650"
        MinWidth="1000" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="70"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Background="#FF76E383">
            <Image HorizontalAlignment="Left" Margin="230,0,0,0" Source="/Resources/logo.png" />
            <Label HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="35" Content="Товары для животных"></Label>  
        </Grid>
        <Frame HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="1" x:Name="MainFrame" NavigationUIVisibility="Hidden"></Frame>
    </Grid>
</Window>
